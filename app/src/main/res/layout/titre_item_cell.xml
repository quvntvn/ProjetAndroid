<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/titreCell">

    <TextView
        android:id="@+id/titreCellNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif-black"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/titreCellImage"
        app:layout_constraintBottom_toBottomOf="@+id/titreCellImage"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/titreCellImage"
        android:layout_width="43dp"
        android:layout_height="43dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_accueil_favoris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titreCellNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titreCellTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="titre"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/titreCellArtiste"
        app:layout_constraintStart_toEndOf="@+id/titreCellImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titreCellArtiste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:text="Artiste"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titreCellImage"
        app:layout_constraintTop_toBottomOf="@+id/titreCellTitre" />


</androidx.constraintlayout.widget.ConstraintLayout>
